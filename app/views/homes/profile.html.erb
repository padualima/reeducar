<div class="result">
  <h4>Perfil</h4>
  <i class="fas fa-user-edit" style="font-size: 26px;float:right;margin-right:28px;color:#58b38a;"></i>
  <div class="profile">
    <%= image_tag current_user.image, style: "width:35%; border-radius: 50%;margin-left: 31%" %>
    <h4><%= current_user.name %></h4>
    <h5><%= current_user.username %></h5>
  </div>
</div>
<div class="result">
  <% @recipes.each do |recipe| %>
  <%= link_to homes_comments_path(record_key_for_dom_id(recipe)) do %>
  <div class="recipe">
    <%= image_tag recipe.image %>
    <div class="recipe-info">
      <span class="recipe-name">
        <%= recipe.name %>
      </span>
      <span class="recipe-category">
        <%= recipe.category.description%>
      </span>
      <span class="user-name">
        @<%= recipe.user.username %>
      </span>
      <span class="recipe-date">
        <%= l recipe.created_at, format: :short %>
      </span>
    </div>
    <div class="text-right">
      <div style="font-size:25px;"><i class="fas fa-star" style="color: yellow;"></i> <%= rand(5.0) %> </div>
      <i class="fas fa-thumbs-up" style="font-size:25px;"></i>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
