<div class="form-signin">
  <hr class="my-4">
  <h5 class="card-title text-center">Login</h5>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-label-group">
    <%= f.email_field :email, type:"email", id:"inputEmail", class:"form-control",
    placeholder:"Email address", required: true, autofocus: true  %>
    <%= f.label :email, for: "inputEmail" %>
  </div>
  <div class="form-label-group">
    <%= f.password_field :password, type: "password", id: "inputPassword",
    class: "form-control", placeholder: "Password", required: true  %>
    <%= f.label :password, "Senha", for: "inputPassword" %>
  </div>
  <div class="form-label-group">
    <%= f.password_field :password_confirmation, type: "password", id: "inputPassword" ,
    class: "form-control", placeholder: "Password", required: true %>
    <%= f.label :password_confirmation, "Confirme Senha", for: "inputPassword"%>
  </div>
  <br>
  <div class="text-center">
    <div class="btn-group">
      <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-success text-uppercase" %>
      <% end %>
    </div>
    <%= f.submit "Cadastra-se", class: "btn btn-lg btn-primary text-uppercase" %>
  </div>
  <hr class="my-4">
  <% end %>
</div>
